# PulseWatch AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Server Configuration
SERVER_PORT=5001
SERVER_HOST=0.0.0.0

# Windows Server Access (DO NOT COMMIT REAL CREDENTIALS)
TEAMVIEWER_ID=your_teamviewer_id_here
TEAMVIEWER_PASSWORD=your_teamviewer_password_here

# Database Configuration (for future PostgreSQL deployment)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pulsewatch
DB_USER=pulsewatch_user
DB_PASSWORD=your_secure_database_password_here

# JWT Authentication (for future authentication implementation)
JWT_SECRET_KEY=your_long_random_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=86400

# Admin Credentials (for future admin panel)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Optional: Domain and SSL
DOMAIN_NAME=your-domain.com
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Optional: SMTP for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# Optional: Cloud Storage (if storing backups to cloud)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=pulsewatch-backups

# Optional: Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
